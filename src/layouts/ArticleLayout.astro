---
import '@styles/global.css';

export interface Props {
  title: string;
  description?: string;
  backLink?: string;
  backText?: string;
}

const { 
  title, 
  description = 'A terminal-style personal website',
  backLink = '/',
  backText = 'back to terminal'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;600;700&display=swap" rel="stylesheet" />
  </head>
  <body>
    <div class="min-h-screen">
      <header class="sticky top-0 z-50 border-b border-gray-900 bg-black/80 backdrop-blur-sm">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 py-3">
          <a href={backLink} class="text-gray-600 hover:text-gray-400 transition-colors text-sm inline-flex items-center gap-1.5">
            <span>‚Üê</span>
            <span>{backText}</span>
          </a>
        </div>
      </header>
      
      <main class="max-w-4xl mx-auto px-4 sm:px-6 py-8 sm:py-12">
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  body {
    background: #000000;
  }
</style>