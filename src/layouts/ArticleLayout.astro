---
import '@styles/global.css';

export interface Props {
  title: string;
  description?: string;
  showBackButton?: boolean;
  backLink?: string;
  backText?: string;
}

const { 
  title, 
  description = 'A terminal-style personal website',
  showBackButton = true,
  backLink = '/',
  backText = 'back to terminal'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;600;700&display=swap" rel="stylesheet" />
  </head>
  <body>
    <div class="min-h-screen">
      <!-- Minimal header -->
      {showBackButton && (
        <header class="border-b border-gray-900 sticky top-0 bg-black/95 backdrop-blur-sm z-10">
          <div class="max-w-4xl mx-auto px-6 py-4">
            <a href={backLink} class="text-gray-400 hover:text-gray-200 transition text-sm inline-flex items-center gap-2">
              <span>←</span>
              <span>{backText}</span>
            </a>
          </div>
        </header>
      )}
      
      <!-- Article content -->
      <main class="max-w-4xl mx-auto px-6 py-12">
        <slot />
      </main>

      <!-- Footer -->
      <footer class="border-t border-gray-900 mt-16">
        <div class="max-w-4xl mx-auto px-6 py-8">
          <div class="flex justify-between items-center text-xs text-gray-600">
            <span>© 2025 Genix</span>
            <div class="flex gap-4">
              <a href="https://github.com/m-mdy-m" target="_blank" class="hover:text-gray-400 transition">GitHub</a>
              <a href="mailto:bitsgenix@gmail.com" class="hover:text-gray-400 transition">Email</a>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }

  /* Better readability for body text */
  body {
    background: #000000;
    color: #d1d5db;
  }

  /* Code block improvements */
  pre {
    background: rgba(0, 0, 0, 0.5) !important;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.5rem;
    padding: 1.5rem;
    overflow-x: auto;
    margin: 2rem 0;
  }

  pre code {
    background: transparent !important;
    padding: 0 !important;
    border-radius: 0;
    font-size: 0.875rem;
    line-height: 1.7;
  }

  /* Inline code */
  :not(pre) > code {
    background: rgba(255, 255, 255, 0.05);
    color: #e5e7eb;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* Improve link visibility */
  a {
    color: #9ca3af;
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: all 0.2s;
  }

  a:hover {
    color: #e5e7eb;
    border-bottom-color: #9ca3af;
  }

  /* Blockquote styling */
  blockquote {
    border-left: 4px solid #4b5563;
    padding-left: 1.5rem;
    color: #9ca3af;
    font-style: italic;
    margin: 2rem 0;
  }

  /* Table improvements */
  table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
  }

  th,
  td {
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 0.75rem;
    text-align: left;
  }

  th {
    background: rgba(255, 255, 255, 0.05);
    font-weight: 600;
    color: #e5e7eb;
  }

  /* Image improvements */
  img {
    border-radius: 0.5rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    margin: 2rem 0;
    max-width: 100%;
    height: auto;
  }

  /* Horizontal rule */
  hr {
    border-color: #374151;
    margin: 3rem 0;
  }
</style>