---
import BaseLayout from '@layouts/Layout.astro';
import TerminalWindow from '@components/TerminalWindow.astro';
import { getArticlesGroupedByCategory } from '@services/articles.service';

const groupedArticles = await getArticlesGroupedByCategory();

const categories = Object.keys(groupedArticles).sort();

const platformIcons = {
  devto: 'üìù',
  medium: 'üì∞',
  manual: '‚úçÔ∏è'
};
---

<BaseLayout title="Articles | Genix">
  <TerminalWindow command="ls articles">
    <div class="space-y-10">
      <!-- Header -->
      <div class="space-y-2 pb-6 border-b border-gray-800">
        <h1 class="text-2xl text-white font-bold">Technical Articles</h1>
        <p class="text-base text-gray-200 leading-relaxed">
          Deep dives into computer science fundamentals, software architecture, and programming concepts.
        </p>
        <p class="text-sm text-gray-400 pt-2">
          Synced from <a href="https://dev.to/m__mdy__m" target="_blank" class="text-gray-300 hover:text-white">Dev.to</a> and 
          <a href="https://medium.com/@m-mdy-m" target="_blank" class="text-gray-300 hover:text-white">Medium</a>
        </p>
      </div>

      <!-- Articles by Category -->
      {categories.map(category => {
        const categoryArticles = groupedArticles[category];
        return (
          <div class="space-y-5">
            <div class="flex items-baseline gap-3 pb-3 border-b border-gray-900">
              <span class="text-gray-600">‚ñ∂</span>
              <h2 class="text-lg text-gray-200 font-semibold tracking-wide">
                {category}
              </h2>
              <span class="text-sm text-gray-600">({categoryArticles.length})</span>
            </div>
            
            <div class="space-y-6">
              {categoryArticles.map((article, idx) => (
                <article 
                  class="group space-y-3 animate-fade-in" 
                  style={`animation-delay: ${idx * 50}ms`}>
                  
                  {/* Cover Image */}
                  {article.coverImage && (
                    <a 
                      href={article.url}
                      target="_blank"
                      rel="noopener"
                      class="block rounded-lg overflow-hidden border border-gray-900 hover:border-gray-800 transition-colors">
                      <img 
                        src={article.coverImage}
                        alt={article.title}
                        class="w-full h-48 object-cover"
                        loading="lazy"
                      />
                    </a>
                  )}
                  
                  <a 
                    href={article.url}
                    target="_blank"
                    rel="noopener"
                    class="block space-y-2">
                    
                    {/* Title & Platform */}
                    <div class="flex items-start gap-2">
                      <span class="text-base mt-0.5">{platformIcons[article.platform]}</span>
                      <h3 class="text-lg text-gray-100 group-hover:text-white transition-colors font-medium flex-1">
                        {article.title}
                      </h3>
                    </div>
                    
                    {/* Description */}
                    <p class="text-base text-gray-200 leading-relaxed">
                      {article.description}
                    </p>
                  </a>
                  
                  {/* Meta Info */}
                  <div class="flex flex-wrap items-center gap-4 text-sm">
                    <span class="text-gray-400">
                      {new Date(article.publishedAt).toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric'
                      })}
                    </span>
                    
                    <span class="text-gray-400">
                      ‚è± {article.readingTime} min read
                    </span>
                    
                    {article.reactions > 0 && (
                      <span class="text-gray-400">
                        ‚ù§Ô∏è {article.reactions}
                      </span>
                    )}
                    
                    {article.comments > 0 && (
                      <span class="text-gray-400">
                        üí¨ {article.comments}
                      </span>
                    )}
                  </div>
                  
                  {/* Tags */}
                  {article.tags.length > 0 && (
                    <div class="flex flex-wrap gap-2">
                      {article.tags.slice(0, 5).map(tag => (
                        <span class="text-xs text-gray-400 bg-gray-950 px-2.5 py-1 rounded border border-gray-900">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                  
                  {/* Read More Link */}
                  <div class="pt-1">
                    <a 
                      href={article.url} 
                      target="_blank" 
                      rel="noopener"
                      class="text-gray-400 hover:text-gray-200 transition-colors text-sm">
                      [read on {article.platform === 'devto' ? 'Dev.to' : 'Medium'}] ‚Üí
                    </a>
                  </div>
                </article>
              ))}
            </div>
          </div>
        );
      })}

      {categories.length === 0 && (
        <div class="text-center py-16">
          <p class="text-gray-400">No articles found.</p>
        </div>
      )}
    </div>
  </TerminalWindow>
</BaseLayout>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in {
    animation: fade-in 0.5s ease-out forwards;
    opacity: 0;
  }
</style>