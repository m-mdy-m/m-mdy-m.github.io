---
import { getCollection } from 'astro:content';
import BaseLayout from '@layouts/Layout.astro';
import TerminalWindow from '@components/TerminalWindow.astro';

const articles = await getCollection('articles');
const categories = Array.from(new Set(articles.map(a => a.data.category))).sort();
---

<BaseLayout title="Articles | Genix">
  <TerminalWindow command="ls articles">
    <div class="space-y-10">
      <!-- Header -->
      <div class="space-y-2 pb-6 border-b border-gray-800">
        <h1 class="text-2xl text-white font-bold">Technical Articles</h1>
        <p class="text-base text-gray-300 leading-relaxed">
          Deep dives into computer science fundamentals, software architecture, and programming concepts.
        </p>
      </div>

      <!-- Categories -->
      {categories.map(category => {
        const categoryArticles = articles.filter(a => a.data.category === category);
        return (
          <div class="space-y-5">
            <div class="flex items-baseline gap-3 pb-3 border-b border-gray-900">
              <span class="text-gray-600">â–¶</span>
              <h2 class="text-lg text-gray-200 font-semibold tracking-wide">
                {category}
              </h2>
              <span class="text-sm text-gray-600">({categoryArticles.length})</span>
            </div>
            
            <div class="space-y-6">
              {categoryArticles.map((article, idx) => (
                <article 
                  class="group space-y-3 animate-fade-in" 
                  style={`animation-delay: ${idx * 50}ms`}>
                  <a 
                    href={article.data.links ? Object.values(article.data.links)[0] : `/articles/${article.slug}`}
                    target={article.data.links ? "_blank" : undefined}
                    rel={article.data.links ? "noopener" : undefined}
                    class="block space-y-2">
                    <h3 class="text-lg text-gray-100 group-hover:text-white transition-colors font-medium">
                      {article.data.title}
                    </h3>
                    
                    <p class="text-base text-gray-300 leading-relaxed">
                      {article.data.description}
                    </p>
                  </a>
                  
                  {article.data.tags.length > 0 && (
                    <div class="flex flex-wrap gap-2">
                      {article.data.tags.map(tag => (
                        <span class="text-xs text-gray-400 bg-gray-950 px-2.5 py-1 rounded border border-gray-900">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                  
                  {article.data.links && (
                    <div class="flex gap-3 text-sm pt-1">
                      {Object.entries(article.data.links).map(([platform, url]) => (
                        <a 
                          href={url} 
                          target="_blank" 
                          rel="noopener"
                          class="text-gray-400 hover:text-gray-200 transition-colors">
                          [read on {platform}]
                        </a>
                      ))}
                    </div>
                  )}
                </article>
              ))}
            </div>
          </div>
        );
      })}

      {articles.length === 0 && (
        <div class="text-center py-16">
          <p class="text-gray-400">No articles found.</p>
        </div>
      )}
    </div>
  </TerminalWindow>
</BaseLayout>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in {
    animation: fade-in 0.5s ease-out forwards;
    opacity: 0;
  }
</style>