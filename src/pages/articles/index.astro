---
import BaseLayout from '@layouts/Layout.astro';
import TerminalWindow from '@components/TerminalWindow.astro';
import { getArticlesGroupedByCategory } from '@services/articles.service';

const groupedArticles = await getArticlesGroupedByCategory();
const categories = Object.keys(groupedArticles).sort();
---

<BaseLayout title="Articles | Genix">
  <TerminalWindow command="ls articles">
    <div class="space-y-8">
      <!-- Header -->
      <div class="space-y-2 pb-6 border-b border-gray-800">
        <h1 class="text-2xl text-white font-bold">Technical Articles</h1>
        <p class="text-gray-300 leading-relaxed">
          Deep dives into computer science, algorithms, and software architecture.
        </p>
        <div class="flex gap-2 text-sm text-gray-500 pt-2">
          <span>Synced from</span>
          <a href="https://dev.to/m__mdy__m" target="_blank" class="text-gray-400 hover:text-white">Dev.to</a>
          <span>and</span>
          <a href="https://medium.com/@m-mdy-m" target="_blank" class="text-gray-400 hover:text-white">Medium</a>
        </div>
      </div>

      <!-- Articles by Category -->
      {categories.map(category => {
        const articles = groupedArticles[category];
        return (
          <section class="space-y-4">
            <div class="flex items-center gap-3 pb-2 border-b border-gray-900">
              <h2 class="text-lg text-gray-300 font-semibold">{category}</h2>
              <span class="text-sm text-gray-600">({articles.length})</span>
            </div>
            
            <div class="grid gap-4">
              {articles.map(article => (
                <article class="group p-4 rounded border border-gray-900 hover:border-gray-800 transition-colors bg-black/40">
                  <a href={article.url} target="_blank" rel="noopener" class="block space-y-3">
                    {/* Cover Image */}
                    {article.coverImage && (
                      <div class="aspect-video w-full overflow-hidden rounded bg-gray-950">
                        <img 
                          src={article.coverImage}
                          alt={article.title}
                          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                          loading="lazy"
                        />
                      </div>
                    )}
                    
                    {/* Content */}
                    <div class="space-y-2">
                      <h3 class="text-base text-gray-200 group-hover:text-white transition-colors font-medium leading-snug">
                        {article.title}
                      </h3>
                      
                      <p class="text-sm text-gray-400 leading-relaxed line-clamp-2">
                        {article.description}
                      </p>
                    </div>
                    
                    {/* Meta */}
                    <div class="flex flex-wrap items-center gap-3 text-xs text-gray-500">
                      <span>{new Date(article.publishedAt).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
                      <span>·</span>
                      <span>{article.readingTime} min read</span>
                      {article.reactions > 0 && (
                        <>
                          <span>·</span>
                          <span>{article.reactions} reactions</span>
                        </>
                      )}
                      <span>·</span>
                      <span class="text-gray-600">{article.platform === 'devto' ? 'Dev.to' : 'Medium'}</span>
                    </div>
                    
                    {/* Tags */}
                    {article.tags.length > 0 && (
                      <div class="flex flex-wrap gap-1.5">
                        {article.tags.slice(0, 4).map(tag => (
                          <span class="text-xs text-gray-500 bg-gray-950 px-2 py-0.5 rounded">
                            {tag}
                          </span>
                        ))}
                      </div>
                    )}
                  </a>
                </article>
              ))}
            </div>
          </section>
        );
      })}

      {categories.length === 0 && (
        <div class="text-center py-16 text-gray-500">
          <p>No articles found.</p>
        </div>
      )}
    </div>
  </TerminalWindow>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>