---
import { getCollection } from 'astro:content';
import ArticleLayout from '@layouts/ArticleLayout.astro';

export async function getStaticPaths() {
  const articles = await getCollection('articles');
  return articles.map(article => ({
    params: { slug: article.slug },
    props: { article },
  }));
}

const { article } = Astro.props;
const { Content } = await article.render();
---

<ArticleLayout title={`${article.data.title} | Genix`}>
  <article class="space-y-8">
    <!-- Header -->
    <header class="space-y-4 pb-8 border-b border-gray-900">
      <h1 class="text-3xl md:text-4xl text-white font-bold leading-tight tracking-tight">
        {article.data.title}
      </h1>
      
      <div class="flex items-center gap-3 text-sm text-gray-500">
        <time datetime={article.data.date.toISOString()}>
          {article.data.date.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        <span class="text-gray-800">•</span>
        <span>{article.data.category}</span>
      </div>

      {article.data.tags.length > 0 && (
        <div class="flex flex-wrap gap-2 text-sm">
          {article.data.tags.map((tag: string) => (
            <span class="text-gray-600">{tag}</span>
          ))}
        </div>
      )}

      {article.data.links && (
        <div class="flex gap-4 text-sm pt-2">
          {Object.entries(article.data.links).map(([platform, url]) => (
            <a
              href={url}
              target="_blank"
              rel="noopener"
              class="text-gray-500 hover:text-gray-300 transition-colors"
            >
              [read on {platform}]
            </a>
          ))}
        </div>
      )}
    </header>

    <!-- Content -->
    <div class="article-content prose prose-invert prose-lg max-w-none">
      <Content />
    </div>

    <!-- Footer -->
    <footer class="pt-8 border-t border-gray-900">
      <a href="/articles" class="text-gray-500 hover:text-gray-300 transition-colors text-sm">
        ← back to articles
      </a>
    </footer>
  </article>
</ArticleLayout>

<style>
  .article-content {
    color: #d1d5db;
    line-height: 1.8;
  }
  
  .article-content :global(h2) {
    color: #ffffff;
    font-weight: 700;
    font-size: 1.875rem;
    margin-top: 3rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }
  
  .article-content :global(h3) {
    color: #ffffff;
    font-weight: 600;
    font-size: 1.5rem;
    margin-top: 2.5rem;
    margin-bottom: 0.875rem;
  }
  
  .article-content :global(h4) {
    color: #e5e7eb;
    font-weight: 600;
    font-size: 1.25rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }
  
  .article-content :global(p) {
    margin-top: 1.25rem;
    margin-bottom: 1.25rem;
    color: #d1d5db;
    font-size: 1.0625rem;
  }
  
  .article-content :global(a) {
    color: #9ca3af;
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: color 0.2s;
  }
  
  .article-content :global(a:hover) {
    color: #ffffff;
  }
  
  .article-content :global(code) {
    color: #e5e7eb;
    background: rgba(255, 255, 255, 0.05);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
  }
  
  .article-content :global(pre) {
    background: rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.5rem;
    padding: 1.5rem;
    overflow-x: auto;
    margin: 2rem 0;
  }
  
  .article-content :global(pre code) {
    background: transparent;
    padding: 0;
    border-radius: 0;
  }
  
  .article-content :global(blockquote) {
    border-left: 4px solid #4b5563;
    padding-left: 1.5rem;
    color: #9ca3af;
    font-style: italic;
    margin: 2rem 0;
  }
  
  .article-content :global(ul),
  .article-content :global(ol) {
    color: #d1d5db;
    padding-left: 1.75rem;
    margin: 1.25rem 0;
  }
  
  .article-content :global(li) {
    margin: 0.5rem 0;
  }
  
  .article-content :global(strong) {
    color: #ffffff;
    font-weight: 600;
  }
  
  .article-content :global(em) {
    color: #e5e7eb;
    font-style: italic;
  }
  
  .article-content :global(hr) {
    border-color: #374151;
    margin: 3rem 0;
  }
  
  .article-content :global(img) {
    border-radius: 0.5rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    margin: 2rem 0;
  }

  .article-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
  }

  .article-content :global(th),
  .article-content :global(td) {
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 0.75rem;
    text-align: left;
  }

  .article-content :global(th) {
    background: rgba(255, 255, 255, 0.05);
    font-weight: 600;
    color: #ffffff;
  }
</style>