---
import { getCollection } from 'astro:content';
import ArticleLayout from '@layouts/ArticleLayout.astro';

export async function getStaticPaths() {
  const articles = await getCollection('articles');
  return articles.map(article => ({
    params: { slug: article.slug },
    props: { article },
  }));
}

const { article } = Astro.props;
const { Content } = await article.render();
---

<ArticleLayout title={`${article.data.title} | Genix`}>
  <article class="space-y-10">
    <!-- Header -->
    <header class="space-y-5 pb-8 border-b border-gray-800">
      <div class="space-y-3">
        <div class="text-sm text-gray-400">
          {article.data.category}
        </div>
        
        <h1 class="text-3xl md:text-4xl lg:text-5xl text-white font-bold leading-tight tracking-tight">
          {article.data.title}
        </h1>
        
        <p class="text-lg text-gray-200 leading-relaxed">
          {article.data.description}
        </p>
      </div>

      {article.data.tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {article.data.tags.map((tag: string) => (
            <span class="text-sm text-gray-300 bg-gray-950 px-3 py-1 rounded border border-gray-900">
              {tag}
            </span>
          ))}
        </div>
      )}

      {article.data.links && (
        <div class="flex flex-wrap gap-4 text-base pt-2">
          {Object.entries(article.data.links).map(([platform, url]) => (
            <a
              href={url}
              target="_blank"
              rel="noopener"
              class="text-gray-300 hover:text-white transition-colors">
              → Read on {platform}
            </a>
          ))}
        </div>
      )}
    </header>

    <!-- Content -->
    <div class="article-content prose prose-invert prose-lg max-w-none">
      <Content />
    </div>

    <!-- Footer -->
    <footer class="pt-8 border-t border-gray-900">
      <a href="/articles" class="text-gray-300 hover:text-white transition-colors text-base">
        ← Back to articles
      </a>
    </footer>
  </article>
</ArticleLayout>

<style>
  .article-content {
    color: #e5e5e5;
    line-height: 1.8;
  }
  
  .article-content :global(h2) {
    color: #ffffff;
    font-weight: 700;
    font-size: 2rem;
    margin-top: 3rem;
    margin-bottom: 1.25rem;
    line-height: 1.3;
  }
  
  .article-content :global(h3) {
    color: #ffffff;
    font-weight: 600;
    font-size: 1.625rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .article-content :global(h4) {
    color: #f5f5f5;
    font-weight: 600;
    font-size: 1.375rem;
    margin-top: 2rem;
    margin-bottom: 0.875rem;
  }
  
  .article-content :global(p) {
    margin-top: 1.25rem;
    margin-bottom: 1.25rem;
    color: #e0e0e0;
    font-size: 1.0625rem;
  }
  
  .article-content :global(a) {
    color: #b0b0b0;
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: color 0.2s;
  }
  
  .article-content :global(a:hover) {
    color: #ffffff;
  }
  
  .article-content :global(code) {
    color: #f0f0f0;
    background: rgba(255, 255, 255, 0.08);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
  }
  
  .article-content :global(pre) {
    background: rgba(0, 0, 0, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 0.5rem;
    padding: 1.5rem;
    overflow-x: auto;
    margin: 2rem 0;
  }
  
  .article-content :global(pre code) {
    background: transparent;
    padding: 0;
    border-radius: 0;
    color: #e5e5e5;
  }
  
  .article-content :global(blockquote) {
    border-left: 4px solid #666;
    padding-left: 1.5rem;
    color: #b8b8b8;
    font-style: italic;
    margin: 2rem 0;
  }
  
  .article-content :global(ul),
  .article-content :global(ol) {
    color: #e0e0e0;
    padding-left: 1.75rem;
    margin: 1.25rem 0;
  }
  
  .article-content :global(li) {
    margin: 0.625rem 0;
  }
  
  .article-content :global(strong) {
    color: #ffffff;
    font-weight: 600;
  }
  
  .article-content :global(em) {
    color: #f0f0f0;
    font-style: italic;
  }
  
  .article-content :global(hr) {
    border-color: #444;
    margin: 3rem 0;
  }
  
  .article-content :global(img) {
    border-radius: 0.5rem;
    border: 1px solid rgba(255, 255, 255, 0.15);
    margin: 2rem 0;
  }

  .article-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
  }

  .article-content :global(th),
  .article-content :global(td) {
    border: 1px solid rgba(255, 255, 255, 0.15);
    padding: 0.75rem;
    text-align: left;
    color: #e0e0e0;
  }

  .article-content :global(th) {
    background: rgba(255, 255, 255, 0.08);
    font-weight: 600;
    color: #ffffff;
  }
</style>