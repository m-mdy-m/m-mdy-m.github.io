---
import { getCollection } from 'astro:content';
import ArticleLayout from '@layouts/ArticleLayout.astro';

export async function getStaticPaths() {
  const thoughts = await getCollection('thoughts');
  return thoughts.map(thought => ({
    params: { slug: thought.slug },
    props: { thought },
  }));
}

const { thought } = Astro.props;
const { Content } = await thought.render();
---

<ArticleLayout 
  title={`${thought.data.title} | Genix`}
  description={thought.data.description}
  backLink="/thoughts"
  backText="back to thoughts">
  
  <article class="space-y-8">
    <header class="space-y-4 pb-8 border-b border-gray-900">
      <div class="space-y-2">
        <h1 class="text-3xl md:text-4xl text-white font-bold leading-tight tracking-tight">
          {thought.data.title}
        </h1>
        
        <time datetime={thought.data.date.toISOString()} class="text-sm text-gray-600">
          {thought.data.date.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
      </div>

      {thought.data.description && (
        <p class="text-base text-gray-500 leading-relaxed">
          {thought.data.description}
        </p>
      )}

      {thought.data.tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {thought.data.tags.map(tag => (
            <span class="text-xs text-gray-700 bg-gray-950 px-2 py-1 rounded border border-gray-900">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>

    <div class="article-content prose prose-invert prose-lg max-w-none">
      <Content />
    </div>

    <footer class="pt-8 border-t border-gray-900 flex justify-between items-center">
      <a href="/thoughts" class="text-gray-600 hover:text-gray-400 transition-colors text-sm">
        ‚Üê all thoughts
      </a>
    </footer>
  </article>
</ArticleLayout>

<style>
  .article-content {
    color: #d1d5db;
    line-height: 1.8;
  }
  
  .article-content :global(h1),
  .article-content :global(h2),
  .article-content :global(h3),
  .article-content :global(h4) {
    color: #ffffff;
    font-weight: 700;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }
  
  .article-content :global(h1) { font-size: 2.25rem; line-height: 1.2; }
  .article-content :global(h2) { font-size: 1.875rem; line-height: 1.3; }
  .article-content :global(h3) { font-size: 1.5rem; line-height: 1.4; }
  .article-content :global(h4) { font-size: 1.25rem; line-height: 1.5; }
  
  .article-content :global(p) {
    margin-top: 1.25rem;
    margin-bottom: 1.25rem;
    color: #d1d5db;
    font-size: 1.0625rem;
  }
  
  .article-content :global(a) {
    color: #9ca3af;
    text-decoration: underline;
    text-underline-offset: 3px;
    transition: color 0.2s;
  }
  
  .article-content :global(a:hover) { color: #ffffff; }
  
  .article-content :global(code) {
    color: #e5e7eb;
    background: rgba(255, 255, 255, 0.05);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.9em;
  }
  
  .article-content :global(pre) {
    background: rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 0.5rem;
    padding: 1.5rem;
    overflow-x: auto;
    margin: 2rem 0;
  }
  
  .article-content :global(pre code) {
    background: transparent;
    padding: 0;
    border-radius: 0;
  }
  
  .article-content :global(blockquote) {
    border-left: 4px solid #4b5563;
    padding-left: 1.5rem;
    color: #9ca3af;
    font-style: italic;
    margin: 2rem 0;
  }
  
  .article-content :global(ul),
  .article-content :global(ol) {
    color: #d1d5db;
    padding-left: 1.75rem;
    margin: 1.25rem 0;
  }
  
  .article-content :global(li) { margin: 0.5rem 0; }
  .article-content :global(strong) { color: #ffffff; font-weight: 600; }
  .article-content :global(em) { color: #e5e7eb; font-style: italic; }
  .article-content :global(hr) { border-color: #374151; margin: 3rem 0; }
  
  .article-content :global(img) {
    border-radius: 0.5rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    margin: 2rem 0;
  }

  .article-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
  }

  .article-content :global(th),
  .article-content :global(td) {
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 0.75rem;
    text-align: left;
  }

  .article-content :global(th) {
    background: rgba(255, 255, 255, 0.05);
    font-weight: 600;
    color: #ffffff;
  }
</style>