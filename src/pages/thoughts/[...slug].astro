---
import { getCollection } from 'astro:content';
import ArticleLayout from '@layouts/ArticleLayout.astro';

export async function getStaticPaths() {
  const thoughts = await getCollection('thoughts');
  return thoughts.map(thought => ({
    params: { slug: thought.slug },
    props: { thought },
  }));
}

const { thought } = Astro.props;
const { Content } = await thought.render();

const moodConfig = {
  'technical': { icon: '‚öôÔ∏è', color: 'text-blue-400', label: 'Technical' },
  'reflective': { icon: 'üí≠', color: 'text-purple-400', label: 'Reflective' },
  'philosophical': { icon: 'üß†', color: 'text-yellow-400', label: 'Philosophical' },
  'personal': { icon: '‚úçÔ∏è', color: 'text-green-400', label: 'Personal' }
};

const mood = thought.data.mood ? moodConfig[thought.data.mood] : null;
---

<ArticleLayout 
  title={`${thought.data.title} | Genix`}
  description={thought.data.description}
  backLink="/thoughts"
  backText="back to thoughts">
  
  <article class="space-y-10">
    <header class="space-y-5 pb-8 border-b border-gray-800">
      <div class="space-y-3">
        {mood && (
          <div class={`flex items-center gap-2 text-sm ${mood.color}`}>
            <span>{mood.icon}</span>
            <span>{mood.label}</span>
          </div>
        )}
        
        <h1 class="text-3xl md:text-4xl lg:text-5xl text-white font-bold leading-tight tracking-tight">
          {thought.data.title}
        </h1>
        
        {thought.data.description && (
          <p class="text-lg text-gray-200 leading-relaxed">
            {thought.data.description}
          </p>
        )}
      </div>

      {thought.data.tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {thought.data.tags.map(tag => (
            <span class="text-sm text-gray-300 bg-gray-950 px-3 py-1 rounded border border-gray-900">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>

    <!-- Content - using global .article-content styles -->
    <div class="article-content">
      <Content />
    </div>

    <footer class="pt-8 border-t border-gray-900">
      <a href="/thoughts" class="text-gray-300 hover:text-white transition-colors text-base">
        ‚Üê All thoughts
      </a>
    </footer>
  </article>
</ArticleLayout>