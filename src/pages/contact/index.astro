---
import BaseLayout from '@layouts/Layout.astro';
import TerminalWindow from '@components/TerminalWindow.astro';
---

<BaseLayout title="Contact | Genix">
  <TerminalWindow command="cat contact.md">
    <div class="space-y-6">
      <!-- Primary Contact -->
      <div class="space-y-3">
        <div class="text-gray-600 text-xs uppercase tracking-wider">Primary</div>
        
        <div class="space-y-4">
          <div class="space-y-1">
            <div class="text-gray-400 text-sm">Email</div>
            <a href="mailto:bitsgenix@gmail.com" 
               class="text-gray-500 hover:text-gray-300 transition text-sm">
              bitsgenix@gmail.com
            </a>
            <p class="text-xs text-gray-600">
              Response: 24-48 hours
            </p>
          </div>

          <div class="space-y-1">
            <div class="text-gray-400 text-sm">GitHub</div>
            <a href="https://github.com/m-mdy-m" 
               target="_blank"
               rel="noopener noreferrer"
               class="text-gray-500 hover:text-gray-300 transition text-sm">
              github.com/m-mdy-m
            </a>
            <p class="text-xs text-gray-600">
              Issues, PRs, discussions
            </p>
          </div>

          <div class="space-y-1">
            <div class="text-gray-400 text-sm">Dev.to</div>
            <a href="https://dev.to/m__mdy__m" 
               target="_blank"
               rel="noopener noreferrer"
               class="text-gray-500 hover:text-gray-300 transition text-sm">
              dev.to/m__mdy__m
            </a>
            <p class="text-xs text-gray-600">
              Article comments
            </p>
          </div>

          <div class="space-y-1">
            <div class="text-gray-400 text-sm">Medium</div>
            <a href="https://medium.com/@m-mdy-m" 
               target="_blank"
               rel="noopener noreferrer"
               class="text-gray-500 hover:text-gray-300 transition text-sm">
              medium.com/@m-mdy-m
            </a>
            <p class="text-xs text-gray-600">
              Reading & responses
            </p>
          </div>
        </div>
      </div>

      <!-- CLI Commands -->
      <div class="space-y-2">
        <div class="text-gray-600 text-xs uppercase tracking-wider">Via Terminal</div>
        <div class="space-y-1 text-xs text-gray-600 font-mono">
          <div>$ whoami <span class="text-gray-800"># view profile</span></div>
          <div>$ github <span class="text-gray-800"># open github</span></div>
        </div>
      </div>

      <!-- Footer -->
      <div class="pt-4 border-t border-gray-900">
        <p class="text-xs text-gray-700">
          Last updated: January 2025
        </p>
      </div>
    </div>
  </TerminalWindow>
</BaseLayout>