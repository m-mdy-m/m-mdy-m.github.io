---
import BaseLayout from '@layouts/Layout.astro';
import TerminalWindow from '@components/TerminalWindow.astro';
---

<BaseLayout title="Genix">
  <TerminalWindow>
    <div class="space-y-6">
      <div class="space-y-1">
        <p class="text-xs text-gray-600">
          Type <span class="text-gray-500">help</span> to see available commands
        </p>
      </div>

      <div class="space-y-2">
        <div class="text-gray-600 text-xs uppercase tracking-wider">Quick Start</div>
        <div class="space-y-1 text-sm">
          <div class="flex gap-2">
            <span class="text-gray-700">→</span>
            <code class="text-gray-500">whoami</code>
            <span class="text-gray-800">—</span>
            <span class="text-gray-600">about me</span>
          </div>
          <div class="flex gap-2">
            <span class="text-gray-700">→</span>
            <code class="text-gray-500">ls</code>
            <span class="text-gray-800">—</span>
            <span class="text-gray-600">list contents</span>
          </div>
          <div class="flex gap-2">
            <span class="text-gray-700">→</span>
            <code class="text-gray-500">cd articles</code>
            <span class="text-gray-800">—</span>
            <span class="text-gray-600">technical articles</span>
          </div>
          <div class="flex gap-2">
            <span class="text-gray-700">→</span>
            <code class="text-gray-500">cd thoughts</code>
            <span class="text-gray-800">—</span>
            <span class="text-gray-600">personal reflections</span>
          </div>
          <div class="flex gap-2">
            <span class="text-gray-700">→</span>
            <code class="text-gray-500">cd projects</code>
            <span class="text-gray-800">—</span>
            <span class="text-gray-600">open source projects</span>
          </div>
          <div class="flex gap-2">
            <span class="text-gray-700">→</span>
            <code class="text-gray-500">cd images</code>
            <span class="text-gray-800">—</span>
            <span class="text-gray-600">docker images</span>
          </div>
          <div class="flex gap-2">
            <span class="text-gray-700">→</span>
            <code class="text-gray-500">cd books</code>
            <span class="text-gray-800">—</span>
            <span class="text-gray-600">published books</span>
          </div>
          <div class="flex gap-2">
            <span class="text-gray-700">→</span>
            <code class="text-gray-500">tree</code>
            <span class="text-gray-800">—</span>
            <span class="text-gray-600">view structure</span>
          </div>
        </div>
      </div>

      <div class="pt-3 border-t border-gray-900">
        <p class="text-xs text-gray-700">
          <kbd class="px-1 py-0.5 bg-gray-950 border border-gray-900 rounded text-gray-600">↑↓</kbd> history
          <span class="mx-2 text-gray-900">•</span>
          <kbd class="px-1 py-0.5 bg-gray-950 border border-gray-900 rounded text-gray-600">Tab</kbd> completion
        </p>
      </div>
    </div>
  </TerminalWindow>
</BaseLayout>