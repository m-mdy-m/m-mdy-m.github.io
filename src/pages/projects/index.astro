---
import BaseLayout from '@layouts/Layout.astro';
import TerminalWindow from '@components/TerminalWindow.astro';
import { getAllProjects } from '@services/projects.service';

const allProjects = await getAllProjects();

const active = allProjects.filter(p => p.status === 'active');
const maintenance = allProjects.filter(p => p.status === 'maintenance');
const archived = allProjects.filter(p => p.status === 'archived');

const statusConfig = {
  'active': { 
    icon: '‚óè', 
    color: 'text-green-500', 
    bg: 'bg-green-950', 
    border: 'border-green-900',
    label: 'Active'
  },
  'maintenance': { 
    icon: '‚óê', 
    color: 'text-yellow-500', 
    bg: 'bg-yellow-950', 
    border: 'border-yellow-900',
    label: 'Maintenance'
  },
  'archived': { 
    icon: '‚óã', 
    color: 'text-gray-600', 
    bg: 'bg-gray-950', 
    border: 'border-gray-900',
    label: 'Archived'
  }
};
---

<BaseLayout title="Projects | Genix">
  <TerminalWindow command="ls projects">
    <div class="space-y-10">
      <!-- Header -->
      <div class="space-y-2 pb-6 border-b border-gray-800">
        <h1 class="text-2xl text-white font-bold">Projects</h1>
        <p class="text-base text-gray-200 leading-relaxed">
          Tools, libraries, and experiments‚Äîbuilt to solve real problems or explore interesting ideas.
        </p>
        <p class="text-sm text-gray-400 pt-2">
          Automatically synced from <a href="https://github.com/m-mdy-m" target="_blank" class="text-gray-300 hover:text-white">GitHub</a>
        </p>
      </div>

      <!-- Active Projects -->
      {active.length > 0 && (
        <div class="space-y-5">
          <div class="flex items-baseline gap-3 pb-3 border-b border-gray-900">
            <span class="text-gray-600">‚ñ∂</span>
            <h2 class="text-lg text-gray-200 font-semibold">Active Development</h2>
            <span class="text-sm text-gray-600">({active.length})</span>
          </div>
          
          <div class="space-y-6">
            {active.map((project, idx) => {
              const status = statusConfig[project.status];
              return (
                <article 
                  class="group space-y-3 animate-fade-in"
                  style={`animation-delay: ${idx * 50}ms`}>
                  
                  <div class="flex items-start justify-between gap-4">
                    <a href={`/projects/${project.id}`} class="flex-1">
                      <h3 class="text-lg text-gray-100 group-hover:text-white transition-colors font-medium">
                        {project.title}
                      </h3>
                    </a>
                    <div class={`flex items-center gap-1.5 text-xs ${status.color} ${status.bg} px-2.5 py-1 rounded border ${status.border}`}>
                      <span>{status.icon}</span>
                      <span>{status.label}</span>
                    </div>
                  </div>
                  
                  <p class="text-base text-gray-200 leading-relaxed">
                    {project.description}
                  </p>
                  
                  {/* Language Badge */}
                  {project.language && (
                    <div class="flex items-center gap-2">
                      <span 
                        class="w-3 h-3 rounded-full" 
                        style={`background-color: ${project.languageColor}`}
                      ></span>
                      <span class="text-sm text-gray-300">{project.language}</span>
                    </div>
                  )}
                  
                  {/* Tags */}
                  {project.tags.length > 0 && (
                    <div class="flex flex-wrap items-center gap-3 text-sm">
                      {project.tags.slice(0, 5).map(tag => (
                        <span class="text-gray-400">{tag}</span>
                      ))}
                    </div>
                  )}
                  
                  {/* Stats & Links */}
                  <div class="flex flex-wrap items-center gap-4 text-sm pt-1">
                    <div class="flex items-center gap-3 text-gray-400">
                      <span>‚≠ê {project.stars.toLocaleString()}</span>
                      <span>üç¥ {project.forks.toLocaleString()}</span>
                    </div>
                    
                    {project.releases.length > 0 && (
                      <a 
                        href={project.releases[0].url}
                        target="_blank"
                        rel="noopener"
                        class="text-gray-400 hover:text-gray-200 transition-colors">
                        [{project.releases[0].tag}]
                      </a>
                    )}
                    
                    <a 
                      href={project.repository}
                      target="_blank"
                      rel="noopener"
                      class="text-gray-400 hover:text-gray-200 transition-colors">
                      [source]
                    </a>
                  </div>
                </article>
              );
            })}
          </div>
        </div>
      )}

      <!-- Maintenance Projects -->
      {maintenance.length > 0 && (
        <div class="space-y-5">
          <div class="flex items-baseline gap-3 pb-3 border-b border-gray-900">
            <span class="text-gray-600">‚ñ∂</span>
            <h2 class="text-lg text-gray-200 font-semibold">Maintenance Mode</h2>
            <span class="text-sm text-gray-600">({maintenance.length})</span>
          </div>
          
          <div class="space-y-5">
            {maintenance.map((project) => {
              const status = statusConfig[project.status];
              return (
                <article class="group space-y-2">
                  <div class="flex items-start gap-3">
                    <span class={`text-sm ${status.color} mt-1`}>{status.icon}</span>
                    <div class="flex-1 space-y-2">
                      <div class="flex items-start justify-between gap-4">
                        <a href={`/projects/${project.id}`}>
                          <h3 class="text-base text-gray-200 group-hover:text-white transition-colors">
                            {project.title}
                          </h3>
                        </a>
                        {project.language && (
                          <div class="flex items-center gap-1.5">
                            <span 
                              class="w-2.5 h-2.5 rounded-full" 
                              style={`background-color: ${project.languageColor}`}
                            ></span>
                            <span class="text-xs text-gray-400">{project.language}</span>
                          </div>
                        )}
                      </div>
                      <p class="text-sm text-gray-300 leading-relaxed">
                        {project.description}
                      </p>
                      <div class="flex items-center gap-3 text-xs text-gray-500">
                        <span>‚≠ê {project.stars}</span>
                        <span>üç¥ {project.forks}</span>
                      </div>
                    </div>
                  </div>
                </article>
              );
            })}
          </div>
        </div>
      )}

      <!-- Archived Projects -->
      {archived.length > 0 && (
        <div class="space-y-4 pt-4 border-t border-gray-900">
          <div class="flex items-baseline gap-3">
            <span class="text-gray-800">‚ñ∂</span>
            <h2 class="text-base text-gray-500 font-semibold">Archived</h2>
            <span class="text-xs text-gray-700">({archived.length})</span>
          </div>
          
          <div class="space-y-3">
            {archived.map((project) => (
              <article class="group">
                <a href={`/projects/${project.id}`} class="flex items-center gap-2">
                  <span class="text-xs text-gray-700">‚óã</span>
                  <h3 class="text-sm text-gray-500 group-hover:text-gray-400 transition-colors">
                    {project.title}
                  </h3>
                  {project.language && (
                    <span class="text-xs text-gray-600">({project.language})</span>
                  )}
                </a>
              </article>
            ))}
          </div>
        </div>
      )}
    </div>
  </TerminalWindow>
</BaseLayout>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fade-in {
    animation: fade-in 0.5s ease-out forwards;
    opacity: 0;
  }
</style>