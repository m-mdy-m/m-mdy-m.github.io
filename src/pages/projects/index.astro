---
import BaseLayout from '@layouts/Layout.astro';
import TerminalWindow from '@components/TerminalWindow.astro';
import { getAllProjects } from '@services/projects.service';

const allProjects = await getAllProjects();

const active = allProjects.filter(p => p.status === 'active');
const maintenance = allProjects.filter(p => p.status === 'maintenance');
const archived = allProjects.filter(p => p.status === 'archived');
---

<BaseLayout title="Projects | Genix">
  <TerminalWindow command="ls projects">
    <div class="space-y-8">
      <!-- Header -->
      <div class="space-y-2 pb-6 border-b border-gray-800">
        <h1 class="text-2xl text-white font-bold">Projects</h1>
        <p class="text-gray-300 leading-relaxed">
          Open source tools, libraries, and experiments. Automatically synced from GitHub.
        </p>
      </div>

      <!-- Active Projects -->
      {active.length > 0 && (
        <section class="space-y-4">
          <h2 class="text-lg text-gray-300 font-semibold flex items-center gap-2">
            <span class="text-green-500">‚óè</span>
            Active Development
            <span class="text-sm text-gray-600">({active.length})</span>
          </h2>
          
          <div class="grid gap-4">
            {active.map(project => (
              <article class="group p-4 rounded border border-gray-900 hover:border-gray-800 transition-colors bg-black/40">
                <div class="space-y-3">
                  {/* Header */}
                  <div class="flex items-start justify-between gap-4">
                    <a href={`/projects/${project.slug}`} class="flex-1">
                      <h3 class="text-base text-gray-200 group-hover:text-white transition-colors font-medium">
                        {project.title}
                      </h3>
                    </a>
                    {project.language && (
                      <div class="flex items-center gap-1.5 text-xs">
                        <span 
                          class="w-2.5 h-2.5 rounded-full" 
                          style={`background-color: ${project.languageColor}`}
                        />
                        <span class="text-gray-400">{project.language}</span>
                      </div>
                    )}
                  </div>
                  
                  {/* Description */}
                  <p class="text-sm text-gray-400 leading-relaxed">
                    {project.description}
                  </p>
                  
                  {/* Stats */}
                  <div class="flex flex-wrap items-center gap-3 text-xs text-gray-500">
                    <span class="flex items-center gap-1">
                      <span>‚≠ê</span>
                      <span>{project.stars}</span>
                    </span>
                    <span class="flex items-center gap-1">
                      <span>üç¥</span>
                      <span>{project.forks}</span>
                    </span>
                    {project.releases.length > 0 && (
                      <>
                        <span>¬∑</span>
                        <a 
                          href={project.releases[0].url}
                          target="_blank"
                          rel="noopener"
                          class="hover:text-gray-400">
                          {project.releases[0].tag}
                        </a>
                      </>
                    )}
                    <span>¬∑</span>
                    <span>Updated {new Date(project.pushed).toLocaleDateString('en-US', { month: 'short', year: 'numeric' })}</span>
                  </div>
                  
                  {/* Tags */}
                  {project.tags.length > 0 && (
                    <div class="flex flex-wrap gap-1.5">
                      {project.tags.slice(0, 5).map(tag => (
                        <span class="text-xs text-gray-500 bg-gray-950 px-2 py-0.5 rounded">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                  
                  {/* Links */}
                  <div class="flex gap-3 text-xs">
                    <a 
                      href={`/projects/${project.slug}`}
                      class="text-gray-500 hover:text-gray-300">
                      [view details]
                    </a>
                    <a 
                      href={project.repository}
                      target="_blank"
                      rel="noopener"
                      class="text-gray-500 hover:text-gray-300">
                      [github]
                    </a>
                    {project.homepage && (
                      <a 
                        href={project.homepage}
                        target="_blank"
                        rel="noopener"
                        class="text-gray-500 hover:text-gray-300">
                        [homepage]
                      </a>
                    )}
                  </div>
                </div>
              </article>
            ))}
          </div>
        </section>
      )}

      <!-- Maintenance Projects -->
      {maintenance.length > 0 && (
        <section class="space-y-4">
          <h2 class="text-lg text-gray-400 font-semibold flex items-center gap-2">
            <span class="text-yellow-500">‚óê</span>
            Maintenance Mode
            <span class="text-sm text-gray-700">({maintenance.length})</span>
          </h2>
          
          <div class="space-y-3">
            {maintenance.map(project => (
              <article class="group flex items-start gap-3 p-3 rounded border border-gray-950 hover:border-gray-900 transition-colors bg-black/20">
                <span class="text-yellow-500 text-sm mt-0.5">‚óê</span>
                <div class="flex-1 space-y-2">
                  <div class="flex items-start justify-between gap-4">
                    <a href={`/projects/${project.slug}`}>
                      <h3 class="text-sm text-gray-300 group-hover:text-gray-200 transition-colors">
                        {project.title}
                      </h3>
                    </a>
                    {project.language && (
                      <span class="text-xs text-gray-600">{project.language}</span>
                    )}
                  </div>
                  <p class="text-xs text-gray-500 leading-relaxed">
                    {project.description}
                  </p>
                  <div class="flex items-center gap-3 text-xs text-gray-600">
                    <span>‚≠ê {project.stars}</span>
                    <span>üç¥ {project.forks}</span>
                  </div>
                </div>
              </article>
            ))}
          </div>
        </section>
      )}

      <!-- Archived Projects -->
      {archived.length > 0 && (
        <section class="space-y-3 pt-4 border-t border-gray-950">
          <h2 class="text-base text-gray-600 font-semibold flex items-center gap-2">
            <span class="text-gray-700">‚óã</span>
            Archived
            <span class="text-xs text-gray-800">({archived.length})</span>
          </h2>
          
          <div class="space-y-2">
            {archived.map(project => (
              <article class="group flex items-center gap-2 text-sm">
                <span class="text-gray-800">‚óã</span>
                <a href={`/projects/${project.slug}`} class="text-gray-600 hover:text-gray-500 transition-colors">
                  {project.title}
                </a>
                {project.language && (
                  <span class="text-xs text-gray-700">({project.language})</span>
                )}
              </article>
            ))}
          </div>
        </section>
      )}
    </div>
  </TerminalWindow>
</BaseLayout>